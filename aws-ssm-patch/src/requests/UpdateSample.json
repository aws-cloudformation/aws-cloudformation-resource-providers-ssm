{
  "Resources": {
    "AMAZONLINUX4": {
      "Type": "AWS::SSM::PatchBaseline",
      "Properties": {
        "Name": "myPatchBaselineNewName",
        "Description": "My approval rules patch baseline for Amazon Linux 2017.09 instances",
        "OperatingSystem": "AMAZON_LINUX",
        "RejectedPatchesAction": "ALLOW_AS_DEPENDENCY",
        "ApprovedPatchesComplianceLevel": "CRITICAL",
        "ApprovedPatchesEnableNonSecurity": "true",
        "Tags": [
          {
            "Key": "Environment",
            "Value": "Production"
          }
        ],
        "PatchGroups": [
          "AMAZONLINUXGROUP4"
        ],
        "ApprovalRules": {
          "PatchRules": [
            {
              "PatchFilterGroup": {
                "PatchFilters": [
                  {
                    "Key": "SEVERITY",
                    "Values": [
                      "Critical"
                    ]
                  },
                  {
                    "Key": "CLASSIFICATION",
                    "Values": [
                      "Security"
                    ]
                  },
                  {
                    "Key": "PRODUCT",
                    "Values": [
                      "AmazonLinux2017.09"
                    ]
                  }
                ]
              },
              "ApproveUntilDate": "2020-03-05",
              "ComplianceLevel": "HIGH"
            }
          ]
        }
      }
    }
  }
}
